{% extends 'base.twig' %}

{% block title %}
    Theme
{% endblock %}

{% block actions %}
    <a class="uk-btn uk-btn-default" href="{{ path('app_theme_change') }}">
        Change Theme
    </a>
    <button class="uk-btn uk-btn-primary" form="" type="submit">Save</button>
{% endblock %}

{% block body %}
    <div>
        <h2>Layouts</h2>
        <table
            class="uk-table uk-table-divider uk-table-middle uk-table-justify"
        >
            <thead>
                <tr>
                    <th class="uk-table-shrink">#</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {% for i, layout in layouts %}
                    <tr>
                        <td>{{ i + 1 }}</td>
                        <td class="uk-table-link">
                            <a
                                href="{{
                                path(
                                    'app_theme_layout',
                                    {
                                        name: layout
                                    }
                                )
                                }}"
                            >
                                {{ layout }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
