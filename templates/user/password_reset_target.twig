{% extends 'auth_base.twig' %}

{% block title %}
    Reset Password
{% endblock %}

{% block body %}
    <h1>Reset Password</h1>

    <form class="uk-form-stacked" method="post">
        <div class="{{ errors.password ?? '' ? 'form-destructive' : '' }}">
            <label class="uk-form-label" for="password">New Password</label>
            <div class="uk-form-controls">
                <input
                    class="uk-input"
                    required
                    type="password"
                    id="password"
                    name="password"
                    value="{{ values.password ?? '' }}"
                />
            </div>
            <div class="uk-form-help">
                {{ errors.password ?? '' }}
            </div>
        </div>

        <div
            class="{{ errors.passwordconfirm ?? '' ? 'form-destructive' : '' }}"
        >
            <label class="uk-form-label" for="passwordconfirm">
                Confirm Password
            </label>
            <div class="uk-form-controls">
                <input
                    class="uk-input"
                    required
                    type="password"
                    id="passwordconfirm"
                    name="passwordconfirm"
                    value="{{ values.passwordconfirm ?? '' }}"
                />
            </div>
            <div class="uk-form-help">
                {{ errors.passwordconfirm ?? '' }}
            </div>
        </div>

        <button type="submit" class="uk-btn uk-btn-primary">Submit</button>
    </form>
{% endblock %}
