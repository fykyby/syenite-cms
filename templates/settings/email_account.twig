{% extends 'base.twig' %}

{% block title %}
    Email Account
{% endblock %}

{% block actions %}
    <button
        class="uk-btn uk-btn-primary"
        form="edit-settings-email-account-form"
        type="submit"
    >
        Save
    </button>
{% endblock %}

{% block body %}
    <form
        id="edit-settings-email-account-form"
        class="uk-form-stacked"
        method="post"
    >
        <div class="{{ errors.username ?? '' ? 'form-destructive' : '' }}">
            <label class="uk-form-label" for="username">Username</label>
            <div class="uk-form-controls">
                <input
                    class="uk-input"
                    type="text"
                    id="username"
                    name="username"
                    value="{{ values.username ?? '' }}"
                />
            </div>
            <div class="uk-form-help">
                {{ errors.username ?? '' }}
            </div>
        </div>

        <div class="{{ errors.password ?? '' ? 'form-destructive' : '' }}">
            <label class="uk-form-label" for="password">Password</label>
            <div class="uk-form-controls">
                <input
                    class="uk-input"
                    type="password"
                    id="password"
                    name="password"
                    value="{{ values.password ?? '' }}"
                />
            </div>
            <div class="uk-form-help">
                {{ errors.password ?? '' }}
            </div>
        </div>

        <div class="{{ errors.host ?? '' ? 'form-destructive' : '' }}">
            <label class="uk-form-label" for="host">Host</label>
            <div class="uk-form-controls">
                <input
                    class="uk-input"
                    type="text"
                    id="host"
                    name="host"
                    value="{{ values.host ?? '' }}"
                />
            </div>
            <div class="uk-form-help">
                {{ errors.host ?? '' }}
            </div>
        </div>

        <div class="{{ errors.port ?? '' ? 'form-destructive' : '' }}">
            <label class="uk-form-label" for="port">Port</label>
            <div class="uk-form-controls">
                <input
                    class="uk-input"
                    type="number"
                    id="port"
                    name="port"
                    value="{{ values.port ?? '' }}"
                />
            </div>
            <div class="uk-form-help">
                {{ errors.port ?? '' }}
            </div>
        </div>
    </form>
{% endblock %}
