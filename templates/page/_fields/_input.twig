<div :class="field.error ? 'form-destructive' : ''">
    <label
        class="uk-form-label"
        :for="`${key}[${field.key}]`"
        x-text="field.key"
    >

    </label>
    <div class="uk-form-controls">
        <input
            class="uk-input"
            x-model="field.value"
            :value="field.value"
            :id="`${key}[${field.key}]`"
            :name="`${key}[${field.key}]`"
        />
    </div>
    <div class="uk-form-help" x-text="field.error"></div>
</div>
