<div :class="field.error ? 'form-destructive' : ''" x->
    <label
        class="uk-form-label capitalize"
        :for="key"
        x-text="field.rules.includes('required') ? field.key + '*' : field.key"
    >

    </label>
    <div class="uk-form-controls">
        <input class="uk-input" x-model="field.value" :id="key" :name="key" />
    </div>
    <div class="uk-form-help" x-text="field.error"></div>
</div>
