<div :class="field.error ? 'form-destructive' : ''">
    <label class="uk-form-label capitalize" :for="key" x-text="field.key">

    </label>
    <div class="uk-form-controls">
        <select
            class="uk-select"
            :id="key"
            :name="key"
            @change="field.value = $event.target.value"
        >
            <option value="">
                -
            </option>
            <template x-for="(option, i) in field.options" :key="i">
                <option
                    :value="option.value"
                    x-text="option.label"
                    :selected="field.value === option.value"
                ></option>
            </template>
        </select>
    </div>
    <div class="uk-form-help" x-text="field.error"></div>
</div>
