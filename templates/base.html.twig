<!DOCTYPE html>
<html class="uk-theme-neutral dark flex h-full flex-col">
    <head>
        <meta charset="UTF-8" />
        <title>
            {{ block('title') ?? '' }} - Syenite CMS
        </title>
        <link
            rel="icon"
            href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"
        />
        {{ block('stylesheets') ?? '' }}
        {{ block('javascripts') ?? '' }}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    </head>
    <body
        class="flex grow flex-col"
        hx-target="body"
        hx-swap="outerHTML"
        hx-boost="true"
    >
        <div class="flex grow">
            <aside
                class="p-small gap-small flex h-full min-w-48 flex-col items-center border-r"
            >
                <nav class="gap-smallest flex w-full grow flex-col">
                    <a
                        class="uk-btn uk-btn-ghost w-full justify-start"
                        href="/admin"
                    >
                        Dashboard
                    </a>
                    <a
                        class="uk-btn uk-btn-ghost w-full justify-start"
                        href="/admin/pages"
                    >
                        Pages
                    </a>
                </nav>

                <button
                    class="uk-btn uk-btn-default w-full"
                    hx-post="{{ path('app_auth_logout') }}"
                >
                    Log Out
                </button>
            </aside>
            <div class="w-full">
                <header
                    class="p-small gap-small box-content flex h-10 items-center border-b"
                >
                    <h1 class="grow">{{ block('title') ?? '' }}</h1>
                    <div class="gap-small flex">
                        {{ block('actions') ?? '' }}
                    </div>
                </header>

                <main class="p-medium gap-medium flex flex-col">
                    {{ block('body') ?? '' }}
                </main>
            </div>
        </div>
    </body>
</html>
